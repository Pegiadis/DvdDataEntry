<Window x:Class="DvdDataEntry.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Tan"
        Title="Login" Height="300" Width="300">

    <Window.Resources>
        <!-- Style for TextBox and PasswordBox -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Style for Button -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
    </Window.Resources>

    <StackPanel>
        <Label Content="Username"/>
        <TextBox x:Name="usernameTextBox" Style="{StaticResource TextBoxStyle}"/>

        <Label Content="Password"/>
        <PasswordBox x:Name="passwordBox" Style="{StaticResource PasswordBoxStyle}"/>

        <Button Content="Login" Click="LoginButton_Click" Style="{StaticResource ButtonStyle}"/>
    </StackPanel>
</Window>