<Window x:Class="DvdDataEntry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DvdDataEntry"
        mc:Ignorable="d"
        Background="Tan"
        Title="DVD Data Entry" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Data Input Form -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 1 -->
            <Label Grid.Row="0" Grid.Column="0" Content="Title"/>
            <TextBox x:Name="titleTextBox" Grid.Row="1" Grid.Column="0" Width="200" Margin="5"/>

            <Label Grid.Row="0" Grid.Column="1" Content="Genre"/>
            <TextBox x:Name="genreTextBox" Grid.Row="1" Grid.Column="1" Width="200" Margin="5"/>

            <Label Grid.Row="0" Grid.Column="2" Content="Company"/>
            <TextBox x:Name="companyTextBox" Grid.Row="1" Grid.Column="2" Width="200" Margin="5"/>

            <!-- Row 2 -->
            <!-- Add additional labels and text boxes for other properties -->

            <!-- Add Button -->
            <Button x:Name="addButton" Content="Add" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Click="AddButton_Click" Margin="5"/>
        </Grid>

        <!-- DataGrid to Display Data -->
        <DataGrid x:Name="dataGrid" Margin="10,0,10,50" AutoGenerateColumns="False" Grid.Row="1" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}"/>
                <DataGridTextColumn Header="Company" Binding="{Binding Company}"/>
                <!-- Other columns as needed -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
